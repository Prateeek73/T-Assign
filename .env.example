# =============================================================================
# Carrier Integration Service - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit the .env file with real credentials to version control.

# =============================================================================
# UPS Configuration
# =============================================================================
# Required: UPS Developer Portal OAuth credentials
# Get these from: https://developer.ups.com/

UPS_CLIENT_ID=your_ups_client_id_here
UPS_CLIENT_SECRET=your_ups_client_secret_here

# Required: Your UPS shipper account number
UPS_ACCOUNT_NUMBER=your_ups_account_number_here

# Optional: API URLs (defaults to production)
# For sandbox/testing, set UPS_USE_SANDBOX=true instead
# UPS_BASE_URL=https://onlinetools.ups.com
# UPS_TOKEN_URL=https://onlinetools.ups.com/security/v1/oauth/token

# Optional: Use UPS sandbox environment for testing
# UPS_USE_SANDBOX=true

# Optional: Request timeout in milliseconds (default: 30000)
# UPS_TIMEOUT_MS=30000

# =============================================================================
# Service Configuration
# =============================================================================

# Environment: development, staging, production
NODE_ENV=development

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Default request timeout in milliseconds
DEFAULT_TIMEOUT_MS=30000

# Enable detailed request/response logging (not recommended for production)
ENABLE_REQUEST_LOGGING=false

